<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.endless.callmocam.activity.MainActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_package_name"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/editText_package_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_goto_third_part_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_goto_third_part_client" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_call_pufa_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/call_pufa_card" />

</LinearLayout>